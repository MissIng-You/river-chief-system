{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "plugins": ["html"],
    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "quotes": ["warn", "single"],
        "semi": ["warn"],
        "no-console": ["warn"],
        "no-undef": ["warn"]
    }
}